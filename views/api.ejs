<body>
  <nav>
    <h1><a href="/">My JWT authentication</a></h1>
    <ul>
        <% if(userID=="Guest") { %>
        <li>Guest</li>
        <li><a href="/auth/login">Log in</a></li>
        <li><a href="/auth/register" class="btn">Sign in</a></li>
        <% } else { %>
        <li><%=userID%></li>
        <li><a href="/auth/logout" class="btn">Log out</a></li>
        <% } %>
    </ul>
  </nav>
  <div class="selct_bar">
      <p>Current linked account: <%=linkDrive%></p>
  </div>
  <button id="getDrive">Get google drive</button>
  <button id="cancelAccess">Cancel the access</button>
  
  <div class="driveInf">
    <p>Display drive information</p>
    <ul class="content">

    </ul>
  </div>

